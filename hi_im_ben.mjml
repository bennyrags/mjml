<mjml>

  <mj-head>
    <mj-style>
      ul li,
      .section_header div {
      line-height:1.25;
      color:white !important;
      }

      .marketing_div {
      background-color:#072f5f;
      }

      .webdev_div {
      background-color: #1261A0;
      }
      
       .button td,
      .button td  a {
      background-color:#3895d3 !important;
      }

      @media (min-width:380px) {
      .marketing_div,
      .webdev_div {
      background-color:#fff;
      }
       ul li,
      .section_header div {
      color:#072f5f !important;
      }
      
    
      
      }

    </mj-style>
    <mj-attributes>
      <mj-text color="#072f5f" />

      <mj-section background-color="#fff" padding="0" />
      <mj-image padding="0" />

    </mj-attributes>

  </mj-head>

  <mj-body background-color="#eee">
